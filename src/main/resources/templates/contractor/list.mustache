<!doctype html>
<head>
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>
{{>fragments/dictionary-header}}
<div class="container">
    <p><br>
        <a href="/contractor/create" class="btn btn-primary" role="button">Добавить запись</a>
    </p>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Наименование</th>
            <th scope="col">Контактное лицо</th>
            <th scope="col">Телефон</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {{#contractors}}
        <tr>
            <th scope="row">{{id}}</th>
            <td>{{name}}</td>
            <td>{{person}}</td>
            <td>{{phone}}</td>
            <td><a href="/contractor/update/{{id}}">Изменить</a></td>
            <td><a href="/contractor/delete/{{id}}">Удалить</a></td>
        </tr>
        {{/contractors}}
        </tbody>
    </table>
</div>

{{>fragments/bootstrap-js}}
</body>
</html>