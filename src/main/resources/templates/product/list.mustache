<!doctype html>
<head>
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>
{{>fragments/dictionary-header}}
<div class="container">
    <p><br>
        <a href="/product/create" class="btn btn-primary" role="button">Добавить запись</a>
    </p>

    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Номенклатура</th>
            <th scope="col">Тип</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {{#product}}
            <tr>
                <th scope="row">{{#id}}{{id}}{{/id}}</th>
                <td>{{#name}}{{name}}{{/name}}</td>
                <td>{{#productType.name}}{{productType.name}}{{/productType.name}}</td>
                <td><a href="/product/update/{{id}}">Изменить</a></td>
                <td><a href="/product/delete/{{id}}">Удалить</a></td>
            </tr>
        {{/product}}
        </tbody>
    </table>

</div>

{{>fragments/bootstrap-js}}
</body>
</html>