<!doctype html>
<head>
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>
{{>fragments/create-edit-header}}
<div class="container">
    <div>
        <form action="{{#isUpdate}}/product/update/{{product.id}}{{/isUpdate}}{{^isUpdate}}/product/create{{/isUpdate}}"
              name="product" method="post">
            <table class="table">
                <tbody>
                <thead>
                <tr>
                    <th>Поле</th>
                    <th>Значение</th>
                </tr>
                </thead>
                <tbody>
                {{#isUpdate}}
                <tr>
                    <td>ID</td>
                    <td><div name="id">{{product.id}}</div></td>
                </tr>
                {{/isUpdate}}
                <tr>
                    <th>Наименование</th>
                    <td><input name="name" class="form-control form-control-sm" type="text" value="{{#product.name}}{{product.name}}{{/product.name}}" /></td>
                </tr>
                <tr>
                    <th>Тип</th>
                    <td>
                        <select name="productType" class="form-select form-select-sm" aria-label=".form-select-sm">
                            {{#selected}}
                                <option value="{{id}}" selected>{{name}}</option>
                            {{/selected}}
                            {{#types}}
                                <option value="{{id}}">{{name}}</option>
                            {{/types}}
                        </select>
                    </td>
                </tr>
                </tbody>
            </table>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
</div>

{{>fragments/bootstrap-js}}
</body>
</html>