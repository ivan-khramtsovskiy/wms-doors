<!doctype html>
<head>
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>
<body>
{{>fragments/create-edit-header}}

<div class="container">
    <div>
        <form action="{{#isUpdate}}/store/credit/{{store.id}}{{/isUpdate}}{{^isUpdate}}/store/debit{{/isUpdate}}"
              name="store" method="post">
            <table class="table">
                <tbody>
                <thead>
                <tr>
                    <th>Поле</th>
                    <th>Значение</th>
                </tr>
                </thead>
                <tbody>
                {{#isUpdate}}
                <tr>
                    <td>ID</td>
                    <td><div name="id">{{store.id}}</div></td>
                </tr>
                {{/isUpdate}}
                <tr>
                    <th>Поступление на склад</th>
                    <td>
                        <select name="warehouse" class="form-select form-select-sm" aria-label=".form-select-sm">
                            {{#warehouse}}
                            <option value="{{id}}">{{address}}</option>
                            {{/warehouse}}
                        </select>
                    </td>
                </tr>
                <tr>
                    <th>От поставщика</th>
                    <td>
                        <select name="contractor" class="form-select form-select-sm" aria-label=".form-select-sm">
                            {{#contractor}}
                            <option value="{{id}}">{{name}}</option>
                            {{/contractor}}
                        </select>
                    </td>
                </tr>

                <tr>
                    <th>Наименование</th>
                    <td>
                        <select name="product" class="form-select form-select-sm" aria-label=".form-select-sm">
                            {{#product}}
                            <option value="{{id}}">{{name}}</option>
                            {{/product}}
                        </select>
                    </td>
                </tr>

                <tr>
                    <th>Количество</th>
                    <td><input name="quantity" class="form-control form-control-sm" type="text" value="{{#store.quantity}}{{store.quantity}}{{/store.quantity}}" /></td>
                </tr>

                <tr>
                    <th>Цена</th>
                    <td><input name="price" class="form-control form-control-sm" type="text" value="{{#store.price}}{{store.price}}{{/store.price}}" /></td>
                </tr>


                </tbody>
            </table>
            <button type="submit" class="btn btn-primary">Добавить</button>
        </form>
    </div>
</div>

{{>fragments/bootstrap-js}}

</body>
</html>